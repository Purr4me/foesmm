<UserControl x:Class="FoESMM.Common.Controls.GameCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoESMM.Common.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="Title" HorizontalAlignment="Center" Margin="0" Grid.Row="0" />
        <Image x:Name="Icon" Margin="0" Width="128" Grid.Row="1" />
        <Label x:Name="Status" HorizontalAlignment="Center" Margin="0" Grid.Row="2" Content="Not found" FontWeight="Bold" Foreground="Red" />
    </Grid>
</UserControl>
